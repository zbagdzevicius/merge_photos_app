<FileChooser>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, .2
            Label:
                font_size: 25
                size_hint: .5, 1
                text: 'pasirinkite pirmą failą'
            Label:
                font_size: 25
                size_hint: .5, 1
                text: 'pasirinkite antrą failą'
        BoxLayout:
            FileChooserIconView:
                id: file1
                rootpath: './'
            FileChooserIconView:
                id: file2
                rootpath: './'
        BoxLayout:
            size_hint: 1, .2
            Button:
                font_size: 25
                text: "Užkrauti"
                on_release: root.load_images(file1.selection, file2.selection)


<MergeModeChooser>:
    first_image: first_image
    second_image: second_image
    final_image: final_image
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, .2
            Button:
                text: "median"
                on_release: root.choose_mode("median")
            Button:
                text: "concat"
                on_release: root.choose_mode("concat")
            Button:
                text: "blend"
                on_release: root.choose_mode("blend")
        BoxLayout:
            Image:
                id: first_image
                allow_stretch: True
            Image:
                id: second_image
                allow_stretch: True
            Image:
                id: final_image
                allow_stretch: True
        BoxLayout:
            size_hint: 1, .2
            Button:
                text: "Pasirinkti kitas nuotraukas"
                on_release: root.dismiss()